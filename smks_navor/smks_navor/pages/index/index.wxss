.container {
  background: #e6e6e6;
}

.nav {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #fff;
  width: 100%;
}

.nav-item {
  width: 248rpx;
  height: 237rpx;
  border: #c9c9c9 solid 1px;
  color: #fff;
  flex-direction: column;
  text-align: center;
  border-left: none;
  border-top: none;
}

.nav-item.nav-item-no-border {
  border-right: none;
}

.nav-item .nav-icon {
  width: 118rpx;
  height: 118rpx;
  align-items: center;
  margin-top: 38rpx;
}

.nav-item .nav-title, .commend-item .commend-title {
  color: #000;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.swiper {
  width: 100%;
  height: 350rpx;
}

.swiper swiper {
  width: 100%;
  height: 100%;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.commend {
  width: 100%;
  text-align: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
  background: #fff;
}

.commend .commend-column {
  display: flex;
  flex-direction: column;
}
.commend .commend-row {
  display: flex;
  flex-direction: row;
}

.commend .commend-header-title {
  text-align: left;
  line-height: 98rpx;
  font-size: 30rpx;
  padding-left: 15rpx;
}

.commend .commend-item {
  display: flex;
  flex-direction: column;
  border-right: #c9c9c9 solid 1px;
  padding-bottom: 60rpx;
  /* width: 372rpx; */
  width: 100%;
  
}
.commend .commend-item2 {
  display: flex;
  flex-direction: column;
  border-right: #c9c9c9 solid 1px;
  padding-bottom: 60rpx;
  /* width: 372rpx; */
  width: 50%;
  
}
.commend .commend-item3 {
  display: flex;
  flex-direction: column;
  border-right: #c9c9c9 solid 1px;
  padding-bottom: 60rpx;
  /* width: 372rpx; */
  width: 33%;
  
}

.commend .commend-item image {
  width: 100%;
  height: 210rpx;
}

.moregame {
margin-top: 3rpx;
border-radius: 12rpx;
-webkit-border-radius: 12rpx;
-moz-border-radius: 12rpx;
padding: 2rpx 24rpx 20rpx;
margin-bottom: 40rpx;
}

.moregame-tl {
position: relative;
margin: 0 100rpx;
height: 36rpx;
}

.moregame-line {
position: absolute;
height: 2rpx;
background: #ef9757;
top: 17rpx;
width: 100%;
z-index: 1;
}

.moregame-nm {
position: relative;
z-index: 2;
text-align: center;
}

.moregame-nm text {
display: inline-block;
font-size: 32rpx;
line-height: 32rpx;
background: #f8e1da;
padding: 0 24rpx;
height: 32rpx;
vertical-align: top;
}

.moregame-main {
margin-top: 16rpx;
}

.moregame-box {
padding: 20rpx 0;
position: relative;
overflow: hidden;
min-height: 112rpx;
border-bottom: 2rpx solid #ecd6d0;
}

.moregame-box:last-child {
border-bottom: none;
}

.moregame-box image {
width: 112rpx;
height: 112rpx;
border-radius: 112rpx;
-webkit-border-radius: 112rpx;
-moz-border-radius: 112rpx;
position: absolute;
}

.moregame-info {
position: absolute;
left: 132rpx;
color: #666;
}

.moregame-info-tl {
font-size: 36rpx;
line-height: 54rpx;
}

.moregame-info-sm {
font-size: 24rpx;
margin-top: 12rpx;
}

.moregame-button {
position: absolute;
right: 0;
height: 72rpx;
width: 160rpx;
background: #f0c618;
text-align: center;
font-size: 30rpx;
line-height: 72rpx;
color: #fff;
border-radius: 72rpx;
-webkit-border-radius: 72rpx;
-moz-border-radius: 72rpx;
top: 40rpx;
}

.moregame-bb {
margin-top: 20rpx;
}
.moregame-yx {
padding:0 24rpx;
}

.moregame-yx image {
display: block;
width: 100%;
height: 240rpx;
}

